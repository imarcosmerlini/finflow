generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model User {
  id                Int            @id @unique @default(autoincrement())
  name              String
  document          String         @unique
  email             String         @unique
  password          String
  emailNotification Boolean        @default(true) @map("email_notification")
  smsNotification   Boolean        @default(true) @map("sms_notification")
  createdAt         DateTime       @default(now()) @map("created_at")
  updatedAt         DateTime?      @map("updated_at")
  type              String
  sender            Notification[] @relation("notification_sender")
  to                Transaction[]  @relation("transaction_to")
  wallet            Wallet[]
  recipient         Notification[] @relation("notification_recipient")
  from              Transaction[]  @relation("transaction_from")

  @@map("users")
}

model Transaction {
  id              Int       @id @unique @default(autoincrement())
  transactionToId Int
  amount          Decimal
  status          String
  createdAt       DateTime  @default(now()) @map("created_at")
  updatedAt       DateTime? @map("updated_at")
  to              User      @relation("transaction_to", fields: [transactionToId], references: [id])
  from            User[]    @relation("transaction_from")
}

model Wallet {
  id        Int       @id @unique @default(autoincrement())
  userId    Int
  amount    Decimal
  createdAt DateTime  @default(now()) @map("created_at")
  updatedAt DateTime? @map("updated_at")
  user      User      @relation(fields: [userId], references: [id])
}

model Notification {
  id        Int      @id @unique @default(autoincrement())
  senderId  Int
  amount    Decimal
  message   String
  createdAt DateTime @default(now()) @map("created_at")
  sender    User     @relation("notification_sender", fields: [senderId], references: [id])
  recipient User[]   @relation("notification_recipient")
}
